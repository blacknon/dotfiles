# Description: ssh先に持っていくvim設定付きfunctionの作成スクリプト
# =============================================

# OSに応じてbase64のコマンドを切り替え
case ${OSTYPE} in
darwin*)
    BASE64="base64"
    ;;
linux*)
    BASE64="base64 -w0"
    ;;
esac

# sh_function_lvimを生成(上書き)
echo -ne "
function lvim() {
    \\\\vim -u <(echo " $(cat ~/dotfiles/vimrc/{functions,settings,remaps,syntax,remote}.vim | gzip -fc - | eval ${BASE64}) "|base64 -d|gzip -dc -) \$@ ;
}
alias vim=lvim\n" >~/_env/sh/functions/lvim.sh
